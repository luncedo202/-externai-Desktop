# Server Configuration
PORT=5000
NODE_ENV=development

# Firebase Admin SDK (for token verification)
# Get from Firebase Console: Project Settings > Service Accounts > Generate Private Key
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project-id.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"

# Anthropic API
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Usage Limits (per user per day)
MAX_REQUESTS_PER_DAY=100
MAX_TOKENS_PER_DAY=100000
MAX_LIFETIME_REQUESTS=20

# PayFast Configuration
PAYFAST_MERCHANT_ID=your_merchant_id
PAYFAST_MERCHANT_KEY=your_merchant_key
PAYFAST_SALT_PASSPHRASE=your_salt_passphrase
PAYFAST_SANDBOX=true

# Publishing / App Hosting
# URL where published apps will be accessible (the hosting server)
PUBLISH_BASE_URL=https://app.externai.dev

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173
