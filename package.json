{
    "$schema": "https://json.schemastore.org/package.json",
    "name": "externai",
    "version": "1.0.0",
    "description": "ExternAI - AI-Powered Development Environment for web, mobile, and game development",
    "main": "src/main/main.js",
    "scripts": {
        "start": "./start.sh",
        "postinstall": "electron-builder install-app-deps",
        "dev": "concurrently \"npm run dev:renderer\" \"npm run dev:electron\"",
        "dev:renderer": "vite",
        "dev:electron": "NODE_ENV=development electron .",
        "build": "vite build",
        "build:electron": "npm run build && electron-builder",
        "pack": "electron-builder --dir",
        "dist": "electron-builder",
        "dist:mac": "npm run build && electron-builder --mac",
        "dist:win": "npm run build && electron-builder --win",
        "dist:linux": "npm run build && electron-builder --linux",
        "dist:all": "npm run build && electron-builder -mwl"
    },
    "keywords": [
        "electron",
        "vscode",
        "ai",
        "ide",
        "developer-tools"
    ],
    "author": {
        "name": "Sonelise Pakade",
        "email": "Luncedosimelaneks@gmail.com"
    },
    "license": "MIT",
    "devDependencies": {
        "@electron/rebuild": "^4.0.1",
        "@types/node": "^20.10.0",
        "@vitejs/plugin-react": "^4.2.1",
        "concurrently": "^8.2.2",
        "electron": "^28.0.0",
        "electron-builder": "^24.13.3",
        "vite": "^5.0.7",
        "wait-on": "^9.0.3"
    },
    "dependencies": {
        "@monaco-editor/react": "^4.6.0",
        "@xterm/addon-fit": "^0.10.0",
        "@xterm/addon-web-links": "^0.11.0",
        "@xterm/xterm": "^5.3.0",
        "axios": "^1.6.2",
        "chokidar": "^3.5.3",
        "cors": "^2.8.5",
        "electron-store": "^8.2.0",
        "electron-updater": "^6.6.2",
        "express": "^5.1.0",
        "firebase": "^12.6.0",
        "node-fetch": "^2.7.0",
        "node-pty": "^1.0.0",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-icons": "^5.0.1"
    },
    "build": {
        "appId": "com.externai.ide",
        "productName": "ExternAI",
        "copyright": "Copyright Â© 2025 ${author}",
        "publish": {
            "provider": "github",
            "owner": "luncedo202",
            "repo": "-externai-Desktop"
        },
        "directories": {
            "output": "dist",
            "buildResources": "assets"
        },
        "files": [
            "build/**/*",
            "src/main/**/*",
            "package.json",
            "!**/*.map",
            "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
            "!**/node_modules/.bin",
            "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
            "!.editorconfig",
            "!**/._*",
            "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
            "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
            "!**/{appveyor.yml,.travis.yml,circle.yml}",
            "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}"
        ],
        "mac": {
            "category": "public.app-category.developer-tools",
            "icon": "assets/ExternAI-logo.png",
            "target": [
                {
                    "target": "dmg",
                    "arch": [
                        "x64",
                        "arm64"
                    ]
                },
                {
                    "target": "zip",
                    "arch": [
                        "x64",
                        "arm64"
                    ]
                }
            ],
            "hardenedRuntime": true,
            "gatekeeperAssess": false,
            "entitlements": "assets/entitlements.mac.plist",
            "entitlementsInherit": "assets/entitlements.mac.plist"
        },
        "dmg": {
            "contents": [
                {
                    "x": 130,
                    "y": 220
                },
                {
                    "x": 410,
                    "y": 220,
                    "type": "link",
                    "path": "/Applications"
                }
            ],
            "title": "ExternAI ${version}"
        },
        "win": {
            "icon": "assets/ExternAI-logo.png",
            "target": [
                {
                    "target": "nsis",
                    "arch": [
                        "x64",
                        "ia32"
                    ]
                },
                {
                    "target": "portable",
                    "arch": [
                        "x64"
                    ]
                }
            ]
        },
        "nsis": {
            "oneClick": false,
            "perMachine": false,
            "allowToChangeInstallationDirectory": true,
            "deleteAppDataOnUninstall": true,
            "createDesktopShortcut": true,
            "createStartMenuShortcut": true,
            "shortcutName": "ExternAI"
        },
        "linux": {
            "icon": "assets/ExternAI-logo.png",
            "category": "Development",
            "target": [
                {
                    "target": "AppImage",
                    "arch": [
                        "x64"
                    ]
                },
                {
                    "target": "deb",
                    "arch": [
                        "x64"
                    ]
                },
                {
                    "target": "rpm",
                    "arch": [
                        "x64"
                    ]
                }
            ]
        }
    }
}
